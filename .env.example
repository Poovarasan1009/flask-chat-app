# Flask Chat App Environment Variables

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite:///chat.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost/chatapp

# For free PostgreSQL services:
# Heroku Postgres: postgres://username:password@hostname:port/database
# Supabase: postgresql://username:password@hostname:port/database
# ElephantSQL: postgres://username:password@hostname:port/database
# Railway: postgresql://username:password@hostname:port/database

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Email Configuration (optional, for future features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_FILE_UPLOAD=True
ENABLE_VOICE_MESSAGES=False
ENABLE_VIDEO_CALLS=False

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=1000/hour

# WebSocket Configuration
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Development Settings
TESTING=False
DEBUG_TB_ENABLED=False
DEBUG_TB_INTERCEPT_REDIRECTS=False